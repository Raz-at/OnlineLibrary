@model OnlineLibrary.Models.User
@{
}

<h1>Update your profile..</h1>

<form action="Update" method="post">

    <div class="mb-3">
        <label for="status" class="form-label">Account</label>
        <input type="text" class="form-control" asp-for="status" readonly>
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="Address" class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address">
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" readonly >
    </div>

    <div class="mb-3">
        <label for="passwprd" class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="Password">
    </div>

    <div class="mb-3">
        <label for="DateOfBirth" class="form-label">DateOfBirth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth">
    </div>

    <div class="mb-3">
        <label for="Gender" class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" readonly>
    </div>


    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="number" class="form-control" asp-for="Phone">
    </div>

    <div class="mb-3">
        <label for="role" class="form-label">Role</label> 
        <input type="text" class="form-control" asp-for="roll" readonly>
    </div>


    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-danger" asp-controller="User" asp-action="Delete">Delete</button>
</form>